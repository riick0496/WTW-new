<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activities.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar Sesión"
        android:id="@+id/btnInicioSesion"
        android:nestedScrollingEnabled="true"
        android:textColor="@color/colorButtonText"
        android:onClick="onClickIniciarSesion"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btnCerrarSesion"
        android:layout_alignEnd="@+id/btnCerrarSesion" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerrar Sesión"
        android:id="@+id/btnCerrarSesion"
        android:enabled="false"
        android:nestedScrollingEnabled="true"
        android:textColor="@android:color/darker_gray"
        android:onClick="onClickCerrarSesion"
        android:layout_below="@+id/btnModificarUsuario"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualizar usuario"
        android:id="@+id/btnModificarUsuario"
        android:enabled="false"
        android:nestedScrollingEnabled="true"
        android:textColor="@android:color/darker_gray"
        android:onClick="onClickModificarUsuario"
        android:layout_below="@+id/btnInicioSesion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar Usuario"
        android:id="@+id/button2"
        android:nestedScrollingEnabled="true"
        android:textColor="@color/colorButtonText"
        android:onClick="onClickAgregarUsuario"
        android:layout_below="@+id/btnCerrarSesion"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consultar Peliculas Agenda"
        android:id="@+id/btn_consulta_pelicula"
        android:nestedScrollingEnabled="true"
        android:textColor="@color/colorButtonText"
        android:onClick="onClickConsultarPeliculasAgenda"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consultar series Agenda"
        android:id="@+id/btn_ConsultarSeriesAgenda"
        android:nestedScrollingEnabled="true"
        android:textColor="@color/colorButtonText"
        android:onClick="onClickConsultarSeriesAgenda"
        android:layout_below="@+id/btn_consulta_pelicula"
        android:layout_alignRight="@+id/btn_consulta_pelicula"
        android:layout_alignEnd="@+id/btn_consulta_pelicula" />

</RelativeLayout>
